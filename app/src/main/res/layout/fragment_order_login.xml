<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_0e1214_13"
        android:layout_gravity="start"
        android:layout_margin="12dp"
        android:text="订单"/>
    <LinearLayout
        android:id="@+id/ll_login_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_unlogin_register" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/unLoginText"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_login_register"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/select_btn_orange_background"
            android:text="登录/注册"
            android:textSize="15sp" />
    </LinearLayout>
    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_orders_waiting_evaluation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>