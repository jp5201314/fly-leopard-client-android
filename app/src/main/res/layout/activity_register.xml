<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="cn.meituan.jp.activity.RegisterActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_orange_ffd161">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_margin="12dp"
        style="@style/text_0e1214_17"
        android:background="@null"
        />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名小于16位"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/color_gray_a5a5a6"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:text="昵 称" />

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1小于昵称小于16位"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/color_gray_a5a5a6" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />
        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号码只能11位"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="@color/color_gray_a5a5a6"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="密 码"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置密码小于16位"
            android:password="true"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/color_gray_a5a5a6" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="注册"
        android:background="#cccccc"
        />
</LinearLayout>
