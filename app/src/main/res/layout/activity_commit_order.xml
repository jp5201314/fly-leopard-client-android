<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="cn.meituan.jp.activity.CommitOrderActivity">

    <include layout="@layout/toolbar_title"/>

    <FrameLayout
        android:id="@+id/fl_set_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/icon_order_in"
            android:layout_margin="12dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_eae8db" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送达时间"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                style="@style/text_0e1214_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分时段计价配送费"
                android:layout_marginLeft="12dp"
                style="@style/text_666666_10"
                android:layout_marginBottom="6dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="32dp"
            android:text="立即送出"
            style="@style/text_0e1214_14"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/icon_order_in"
            android:layout_margin="12dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_gray_eae8db" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡支付新用户最高再减3元"
                android:textColor="@color/color_red_cc5e74"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                style="@style/text_666666_10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线支付"
            style="@style/text_0e1214_14"
            android:layout_gravity="center|end"
            android:layout_marginRight="32dp"
            />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_eae8db" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美团红包"
            android:layout_margin="12dp"
            style="@style/text_0e1214_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用"
            android:layout_gravity="center|end"
            android:layout_marginRight="32dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/icon_order_in"
            android:layout_margin="12dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_eae8db" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家代金券"
            android:layout_margin="12dp"
            style="@style/text_0e1214_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无可用"
            android:layout_gravity="center|end"
            android:layout_marginRight="32dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/icon_order_in"
            android:layout_margin="12dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_gray_eae8db" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美团专送"
            android:layout_gravity="end|center"
            android:layout_marginRight="12dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dasdas"
            android:layout_margin="20dp"
            style="@style/text_0e1214_14"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_gravity="top|center">
            <ImageButton
                android:id="@+id/ib_reduce_amount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_btn_reduce"
                android:layout_margin="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="x"
                />
            <TextView
                android:id="@+id/tv_food_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/ib_increase_amount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_btn_increase"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            style="@style/text_0e1214_12"
            android:layout_gravity="top|end"
            android:layout_marginRight="30dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            />
        <TextView
            android:id="@+id/tv_food_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_0e1214_12"
            android:layout_gravity="top|end"
            android:layout_margin="20dp"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_purchased_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_ffffff"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额:%s"
                    style="@style/text_0e1214_16"
                    android:layout_margin="12dp"
                    />
                <TextView
                    style="@style/text_0e1214_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="待支付:" />
                <LinearLayout
                    android:id="@+id/ll_shopping_cate_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_ffffff_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_red_ff0000"
                        />
                    <TextView
                        android:id="@+id/tv_waiting_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/color_red_ff0000"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_to_commit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:text="提交并支付"
            android:background="@color/color_orange_d88519" />
    </FrameLayout>
</LinearLayout>
