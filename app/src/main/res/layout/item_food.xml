<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/iv_food_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="12dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_0e1214_16"
            android:text="珍珠奶茶"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/tv_food_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="现煮的奶茶"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            style="@style/text_666666_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_666666_12"
            android:text="月售282    赞45"
            android:layout_marginLeft="6dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:text="￥%s"
                style="@style/text_ff0020_17"
                />
                <Button
                    android:id="@+id/btn_add_shopping_cart"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="12dp"
                    android:text="加入购物车"
                    style="@style/text_0e1214_12"
                    android:background="@drawable/select_btn_orange_background"/>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>