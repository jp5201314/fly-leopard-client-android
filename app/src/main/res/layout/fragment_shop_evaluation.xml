<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<View
    android:layout_width="match_parent"
    android:layout_height="12dp"
    android:background="@color/color_white_efefef"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            style="@style/text_ffd705_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家评分"
            style="@style/text_666666_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="口味"
                android:layout_gravity="center"
                style="@style/text_666666_10"
                android:layout_weight="1"
                />
            <RatingBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:rating="4"
                android:max="5"
                android:layout_weight="1.8"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/color_orange_fcca50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                style="@style/text_ffd705_14"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="包装"
                android:layout_gravity="center"
                style="@style/text_666666_10"
                android:layout_weight="1"
                />
            <RatingBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:max="5"
                android:layout_weight="1.8"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/color_orange_fcca50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                style="@style/text_ffd705_14"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="5.0"
          style="@style/text_666666_18"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送评价"
            style="@style/text_666666_10"
            />
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_white_efefef"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大众点评:3.5分"
            style="@style/text_666666_14"/>
        <TextView
            android:id="@+id/tv_evaluation_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="%s条到店评价  >"
            />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_white_efefef"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_evaluation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"/>
</LinearLayout>