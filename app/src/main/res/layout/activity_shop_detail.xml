<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="cn.meituan.jp.activity.ShopDetailActivity">

    <FrameLayout
        android:id="@+id/fl_shop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:src="@drawable/icon_back1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/icon_search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:src="@drawable/icon_share" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/icon_together" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop_image"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dsadasdas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="dsadsadasd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:background="@color/color_black_0e1214"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="24dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_collection"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:background="@null"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="12dp"
        android:background="@color/color_black_0e1214"
        />

</LinearLayout>
