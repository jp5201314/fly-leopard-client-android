<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_white_ffffff"
    tools:context="cn.meituan.jp.activity.MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_ffffff_alpha_60"
        android:orientation="vertical">
        <include layout="@layout/toolbar_title"/>
        <FrameLayout
            android:id="@+id/fl_head_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_ll_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                style="@style/text_666666_14"
                android:text="头像"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_order_in" />
            <ImageView
                android:id="@+id/iv_head_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="28dp"
                android:src="@drawable/icon_mine_head"
                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <FrameLayout
            android:id="@+id/fl_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_ll_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                style="@style/text_666666_14"
                android:text="用户名"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_order_in" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="28dp"
                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <FrameLayout
            android:id="@+id/fl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_ll_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                style="@style/text_666666_14"
                android:text="账号密码"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_order_in" />
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginRight="28dp"
                android:text="未设置"

                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <FrameLayout
            android:id="@+id/fl_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_ll_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                style="@style/text_666666_14"
                android:text="手机号"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_order_in" />
            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="28dp"
                />
        </FrameLayout>
    </LinearLayout>
  <Button
      android:id="@+id/btn_exit_current_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center_horizontal"
      style="@style/text_666666_14"
      android:text="退出当前账号"
      android:textColor="#ff56"/>
</FrameLayout>
